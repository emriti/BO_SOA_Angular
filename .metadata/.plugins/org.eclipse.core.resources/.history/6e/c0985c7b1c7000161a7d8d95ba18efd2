(function() {
	angular.module('recon1', [])
		.controller('ReconController', function($scope, $http) {

			var url = "http://192.168.2.50:8080/ModelService/services/reconcilliation_service/recon";
			
			this.sReconcileNo = "";
			
			this.reconcileNo = "";
			this.sReconcileNo = "";
			this.sReconcileNo = "";
			this.sReconcileNo = "";
			this.sReconcileNo = "";
			this.sReconcileNo = "";
			
			this.recon;
			this.isAdd;
			
			this.search = function(sReconcileNo) {

				var newUrl = "";
				var newRecons = {};

				if (sReconcileNo != "") {
					newUrl = url + "/" + sReconcileNo;
				} else {
					newUrl = url;
				}

				$http({
					method : 'GET',
					url : newUrl
				}).success(function(data) {
					if (data.length > 1) {
						newRecons = data;
					} else {
						newRecons[data] = data
					}
					;
					$scope.recons = newRecons;
				}).error(function(data) {
					console.log(data);
				});
			}

			this.clear = function() {
				this.sReconcileNo = "";
			}

			this.edit = function(recon) {
				console.log(recon);
				this.recon = recon;
				this.isAdd = false;
			}

			this.add = function() {
				this.recon = null;
				this.isAdd = true;
			}

			this.save = function() {
				console.log(this.recon);
				if (this.isAdd) {
					
					var data = $.param({
						sReconcileNo: $scope.recon.sReconcileNo,
						reconcileDate: $scope.recon.reconcileDate,
						paymentTypeId: $scope.recon.paymentTypeId,
						balanceSnapshot: $scope.recon.balanceSnapshot,
						nextPaymentAmount: $scope.recon.nextPaymentAmount,
						penihilanAmount: $scope.recon.penihilanAmount
		            });
					
					var config = {
			                headers : {
			                    'Content-Type': 'application/x-www-form-urlencoded;charset=utf-8;'
			                }
			            }
					
					$http.post(url, data, config)
						.success(function(data, status, header, config){ 
							$scope.PostDataResponse = data;
						}).error(function(data, status, header, config){
							$scope.ResponseDetails = "Data: " + data +
			                    "<hr />status: " + status +
			                    "<hr />headers: " + header +
			                    "<hr />config: " + config;
						});
				} else {
					
				}
				$scope.search(this.sReconcileNo);
			}

			this.deleteData = function(recon) {
				// window.alert("delete" + recon.sReconcileNo);
				$http({
					method : 'DELETE',
					url : url + "/" + recon.sReconcileNo
				}).success(function(data) {
					console.log("Success delete "
							+ recon.sReconcileNo + ", "
							+ data);
				}).error(function(data) {
					console.log("Error delete " + data);
				});
				$scope.search(this.sReconcileNo);
			}

		});
})();